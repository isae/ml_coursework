var colors = {0 : "red", 1 : "green", 2 : "ivory", 3 : "yellow", 4 : "blue" }
var nationalities = {0 : "england", 1 : "spain", 2 : "ukraine", 3 : "norway", 4 : "japan"}
var pets = {0 : "dog", 1 : "snail", 2 : "fox", 3 : "horse", 4 : "zebra"}
var cigarettes = {0 : "old_gold", 1 : "kools", 2 : "chesterfield", 3 : "lucky_strike", 4 : "parliament"}
var drinks = {0 : "coffee", 1 : "tea", 2 : "milk", 3 : "juice", 4 : "water"}

var mustBe = function(whenApplicable, toCheck){
  return whenApplicable == toCheck
}

var getOne = function(){
  return sample(RandomInteger({n: 5}))
}

// Fisherâ€“Yates shuffle
